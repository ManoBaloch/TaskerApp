<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.pdoffice.taskerapp.MainActivity"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="#ccEDAE63"
        android:id="@+id/cv1"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/horn"
            android:padding="30dp"
            android:id="@+id/imageView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:text="Important\nUrgent"
            android:textAlignment="center"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="150dp"
            android:textSize="32dp"
            android:textColor="#ffffff"
            />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="#CCF99F7A"
        android:id="@+id/cv2"
        android:layout_below="@+id/cv1"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/horn"
            android:padding="30dp"
            android:id="@+id/imageView2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:text="Important\nUrgent"
            android:textAlignment="center"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="150dp"
            android:textSize="32dp"
            android:textColor="#ffffff"
            />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="#CCFA6E66"
        android:id="@+id/cv3"
        android:layout_below="@+id/cv2"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/horn"
            android:padding="30dp"
            android:id="@+id/imageView3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:text="Important\nUrgent"
            android:textAlignment="center"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="150dp"
            android:textSize="32dp"
            android:textColor="#ffffff"
            />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="#CCE5597D"
        android:id="@+id/cv4"
        android:layout_below="@+id/cv3"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/horn"
            android:padding="30dp"
            android:id="@+id/imageView4" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:text="Important\nUrgent"
            android:textAlignment="center"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="150dp"
            android:textSize="32dp"
            android:textColor="#ffffff"
            />


    </android.support.v7.widget.CardView>
</LinearLayout>
